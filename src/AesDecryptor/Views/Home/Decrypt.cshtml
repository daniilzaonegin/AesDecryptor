@model AesDecryptor.Models.DecryptViewModel
@{
    ViewData["Title"] = "Decrypt";
}

<h4>Decrypt</h4>
<form asp-action="Decrypt" method="Post" class="col-6">
    <div class="form-group">
        <label for="textToEncrypt">Text to decrypt</label>
        @Html.TextAreaFor(m => m.TextToDecrypt, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="textToEncrypt">Key</label>
        @Html.TextAreaFor(m => m.DecryptKey, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-info">Decrypt</button>
</form>

@if (Model?.DecryptResult != null)
{
    <div class="text-info col-6">
        <span class="font-weight-bold">Result: </span>@Model?.DecryptResult
    </div>
}
@if (Model?.DecryptError != null)
{
    <div class="text-danger col-6">
        <span class="font-weight-bold">Decryption was not successfull! Error: </span>@Model?.DecryptError
    </div>
}
<div asp-validation-summary="All" class="text-danger"></div>